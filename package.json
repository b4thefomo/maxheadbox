{
  "name": "maxheadbox",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "dev-start": "concurrently \"npm run dev\" \"npm run start-whisper-service\" \"npm run start-backend\"",
    "prod-start": "npm run build && concurrently \"npm run preview\" \"npm run start-whisper-service\" \"npm run start-backend\"",
    "start-backend": "ruby backend/server.rb -o 0.0.0.0",
    "start-whisper-service": "uvicorn backend.whisper_service:app --host 0.0.0.0 --port 8000 --workers 2"
  },
  "dependencies": {
    "animate.css": "^4.1.1",
    "concurrently": "^9.1.2",
    "lodash": "^4.17.21",
    "ollama": "^0.5.16",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "streaming-json": "^0.1.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.28.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "vite": "^6.3.5"
  }
}
